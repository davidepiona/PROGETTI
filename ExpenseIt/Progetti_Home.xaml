<Page x:Class="ExpenseIt.Progetti_Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExpenseIt"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="Progetti_Home">

    <Grid x:Name="grid" Margin="10" Grid.Column="1" Grid.Row="1">
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\attil\source\repos\ExpenseIt\ExpenseIt\background2.jpg" />
        </Grid.Background>
        <Grid.ColumnDefinitions >
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition />
        </Grid.RowDefinitions>



        <Label x:Name="titolo" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Center" FontFamily="Trebuchet MS" 
 FontWeight="Bold" FontSize="25" Foreground="Black">
            Elenco progetti:
        </Label>
        <ListView x:Name="ListView" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="3"  
                 HorizontalAlignment="Left" VerticalAlignment="Top"
                 MouseLeftButtonDown="ListView_MouseLeftButtonDown"
                 SelectedItem="ListView_SelectedItem"
                 Background="White">

        </ListView>
        <Button Grid.Column="4" Grid.Row="1"  Width="150" HorizontalAlignment="Left"
Height="40" Click="Open_Folder" Background="Green" Content="Apri Cartella"/>
        <Button Grid.Column="4" Grid.Row="2"  Width="150" HorizontalAlignment="Left"
            Height="40" Click="New_Project" Background="Green" Content="Nuovo Progetto"/>

        <RichTextBox x:Name="richTextBox" Grid.Column="3" Grid.ColumnSpan="4" Grid.Row="5" Grid.RowSpan="3"></RichTextBox>
    </Grid>
</Page>
